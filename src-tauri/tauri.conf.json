{
	"productName": "neoplay",
	"version": "0.1.0",
	"identifier": "com.tauri.dev",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "pnpm run dev",
		"beforeBuildCommand": "pnpm run build"
	},
	"app": {
		"windows": [
			{
				"title": "neoplay",
				"width": 900,
				"height": 600,
				"resizable": true,
				"fullscreen": false,
				"theme": "Dark"
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},

	"$schema": "../node_modules/@tauri-apps/cli/schema.json"
}
